@page
@model HardwareModel

@{
    ViewData["Title"] = "Hardware Overview";
}

<h2>Hardware Overview</h2>

<p>Below is a list of available hardware items:</p>

@if (Model.HardwareItems != null && Model.HardwareItems.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Price</th>
                <th>Stock Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.HardwareItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Category</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.StockQuantity</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hardware items found.</p>
}

